{{>header}}
<script>
    function mostrarDetalle(idCurso, documento, tipo) {
        window.location = `/detalle?id=${idCurso}&documento=${documento}&tipo=${tipo}`;
    }
</script>
<div class="container">
    <div class="row">
        <h3 class="col">Bienvenido {{usuario.nombre}}</h3>
        {{#esCoordinador usuario.documento}}
        <form action="/cursosform" method="get" class="col-2">
            <button type="submit" class="btn btn-primary">Crear
                curso</button>
        </form>
        {{/esCoordinador}}
    </div>
    {{#if creado}}
    <div class="alert alert-success">Curso creado con exito</div>
    {{/if}}
    {{#esCoordinador usuario.documento}}
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="lista-1" data-toggle="tab" href="#lista1" role="tab" aria-controls="lista1" aria-selected="true">Cursos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="lista-2" data-toggle="tab" href="#lista2" role="tab" aria-controls="lista2" aria-selected="false">Usuarios</a>
        </li>
    </ul>
    {{else}}
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="lista-1" data-toggle="tab" href="#lista1" role="tab" aria-controls="lista1" aria-selected="true">Mis Cursos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="lista-2" data-toggle="tab" href="#lista2" role="tab" aria-controls="lista2" aria-selected="false">Otros cursos</a>
        </li>
    </ul>
    {{/esCoordinador}}
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="lista1" role="tabpanel" aria-labelledby="lista1">
            {{{lista1 usuario.documento}}}
        </div>
        <div class="tab-pane fade" id="lista2" role="tabpanel" aria-labelledby="lista2">
            {{{lista2 usuario.documento}}}
        </div>
    </div>
</div>
{{>footer}}