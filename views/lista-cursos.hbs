{{>header}}
<script>
    function mostrarDetalle(idCurso, documento) {
        window.location = `/cursosdetalle?id=${idCurso}&documento=${documento}`;
    }
</script>
<div class="container">
    <div class="row">
        <h3 class="col">Bienvenido {{usuario.nombre}}</h3>
        {{#esCoordinador usuario.documento}}
        <form action="/cursosform" method="get" class="col-2">
            <button type="submit" class="btn btn-primary">Crear
                curso</button>
        </form>
        {{/esCoordinador}}
    </div>
    {{#if error}}
    <div class="alert alert-success">Curso creado con exito</div>
    {{/if}}
    {{#esCoordinador usuario.documento}}
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="mis-cursos" data-toggle="tab" href="#misCursos" role="tab"
                aria-controls="misCursos" aria-selected="true">Cursos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="usuarios" data-toggle="tab" href="#usuarios" role="tab" aria-controls="usuarios"
                aria-selected="false">Usuarios</a>
        </li>
    </ul>
    {{else}}
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li>
            <a class="nav-link active" id="mis-cursos" data-toggle="tab" href="#misCursos" role="tab"
                aria-controls="misCursos" aria-selected="true">Mis Cursos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="otros-cursos" data-toggle="tab" href="#otrosCursos" role="tab"
                aria-controls="otrosCursos" aria-selected="false">Otros cursos</a>
        </li>
    </ul>
    {{/esCoordinador}}
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="misCursos" role="tabpanel" aria-labelledby="mis-cursos">
            {{{listar usuario.documento true}}}
        </div>
        <div class="tab-pane fade" id="otrosCursos" role="tabpanel" aria-labelledby="otros-cursos">
            {{{listar usuario.documento false}}}
        </div>
        <div class="tab-pane fade" id="usuarios" role="tabpanel" aria-labelledby="usuarios">
            {{{listarUsuarios}}}
        </div>
    </div>
</div>
{{>footer}}