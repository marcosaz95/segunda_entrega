{{>header}}
<div class="card login-form">
    <form class="column" action='/checkLogin' method="post">
        {{#if error}}
        <div class="alert alert-danger">El documento de identidad ingresado no es válido</div>
        {{/if}}
        {{#if creado}}
        <div class="alert alert-success">Usuario creado con exito</div>
        {{/if}}
        <div class="form-group">
            <label for="documento">Documento de identidad</label>
            <input type="text" class="form-control" id="documento" name="documento" placeholder="Documento de identidad" required>
        </div>
        <div class="row">
            <span class="col-10">¿No tienes cuenta? <a href="register">Registrate acá</a></span>
            <button type="submit" class="btn btn-primary col">Submit</button>
        </div>
    </form>
</div>
{{>footer}}