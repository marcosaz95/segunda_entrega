{{>header}}
<div class="container">
    <div class="row">
        <h3 class="col">Bienvenido {{usuario.nombre}}</h3>
        {{#esCoordinador usuario.rol}}
        <form action="/cursosform" method="get" class="col-2">
            <button type="submit" class="btn btn-primary">Crear
                curso</button>
        </form>
        {{/esCoordinador}}
    </div>
    {{#if creado}}
    <div class="alert alert-success">Curso creado con exito</div>
    {{/if}}
    {{#if actualizado}}
    <div class="alert alert-success">Usuario actualizado con exito</div>
    {{/if}}
    {{#if cerrado}}
    <div class="row justify-content-center padding-top-24">
        <div class="alert alert-success row align-center col-6">Curso cerrado con exito</div>
    </div>
    {{/if}}
    {{#esCoordinador usuario.rol}}
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="lista-1" data-toggle="tab" href="#lista1" role="tab" aria-controls="lista1"
                aria-selected="true">Cursos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="lista-2" data-toggle="tab" href="#lista2" role="tab" aria-controls="lista2"
                aria-selected="false">Usuarios</a>
        </li>
        {{else}}
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="lista-1" data-toggle="tab" href="#lista1" role="tab"
                    aria-controls="lista1" aria-selected="true">Mis Cursos</a>
            </li>
            {{/esCoordinador}}
            {{#esAspirante usuario.rol}}
            <li class="nav-item">
                <a class="nav-link" id="lista-2" data-toggle="tab" href="#lista2" role="tab" aria-controls="lista2"
                    aria-selected="false">Otros cursos</a>
            </li>
            {{/esAspirante}}
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="lista1" role="tabpanel" aria-labelledby="lista1">
                {{{obtenerLista1 lista1}}}
            </div>
            <div class="tab-pane fade" id="lista2" role="tabpanel" aria-labelledby="lista2">
                {{{obtenerLista2 lista2 usuario.rol}}}
            </div>
        </div>
</div>
{{>footer}}